{% extends 'base.html.twig' %}

{% block title %}Mon espace - connexion{% endblock %}

{% block body %}
<form method="post" class="my-4 mx-5">
    {% if error %}
        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    {% if app.user %}
        <div class="mb-3">
            Vous êtes connecté en tant que {{ app.user.userIdentifier }}, <a href="{{ path('app_logout') }}">Deconnexion</a>
        </div>
    {% endif %}

    <h1 class="h3 mb-3 font-weight-normal text-center">Mon espace de connexion</h1>
    <label for="inputEmail" class=" my-2">Email :</label>
    <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control my-2" autocomplete="email" required autofocus>
    <label for="inputPassword" class=" my-2">Mot de passe :</label>
    <input type="password" name="password" id="inputPassword" class="form-control my-2" autocomplete="current-password" required>

    <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

    <button class="btn btn-lg btn-primary my-2" type="submit">
        Sign in
    </button>
</form>
{% endblock %}
